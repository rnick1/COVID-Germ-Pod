  <div class="row">
    <div class="col-md-6">
      ​
      <div class="card" style="background-color: transparent; border-style: none;">
        <div class="new-group-card">
          <h3>Create a New Group:</h3>
          <hr>
          <form class="form new-group-form">
            <div class="form-group">
              <label for="group-name">Pod Name:</label>
              <input class="form-input" type="text" id="group-name" name="group-name" />
            </div>
            <div class="form-group">
              <label for="group-password">Pod Password: </label>
              <input class="form-input" type="password" id="group-password" name="group-password" />
            </div>
            <div class="form-group">
              <label for="group-invites">email addresses of pod-members you'd like to invite (seperate each address
                with
                a
                comma)</label>
              <input class="form-input" type="email" id="group-invites" name="group-invites" />
            </div>
          </form>
        </div>
      </div>

      <div class="col-md-8">
        ​
        <div class="card" style="background-color: transparent; border-style: none;">
          <div class="new-group-rules">
            <form class="form signup-form">
              <h4>Group Rules</h4>
              <h6><i>Check all rules that will apply.</i></h6>
              <hr>
              {{#each rules as |rule| }}
              <div class='form-group'>
                <input class='form-input group-rules' type='checkbox' name='group-rules' value={{rule.id}}> <label
                  for={{rule.id}}>
                  {{rule.name}}: {{rule.description}}</label></input>
              </div>
              {{/each}}

              <div class="form-group">
                <button type="submit" class="btn btn-secondary">Create</button>
              </div>
            </form>
          </div>
        </div>

        <script src="./js/login.js"></script>